<h1 style="text-align: center;">Thông Tin Sản Phẩm</h1>
<tbody>
    <div class="row row-cols-1 row-cols-md-3 g-3">
        {{#each product}}
        <div class="col">
            <div class="card h-100 shadow-sm p-3 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">Tên Sản Phẩm: {{this.Product_name}}</h5>
                    <p class="card-text">Thuộc: {{this.package_Name}}</p>
                    <p class="card-text">Giá Tiền: {{this.price}} / {{this.Unit}}</p>
                    <p class="card-text">Số lượng: {{this.number}} ({{this.Unit}})</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <a href="#" class="btn btn-primary">Thêm vào giỏ</a>
</tbody>

<div class="col-md">
    <p class="card-text">Số lượng:</p>
  <form method = "post" action="">
    {{!-- /manager/findPatient --}}
    <div class="input-group">
        <button id="search-button" type="submit" class="btn btn-light">-</button>
      <div class="form-outline">
        <input id="search-input" type="text" name="productName" id="form1" class="form-control" style="width:40px" />
      </div>
      <button id="add-button" type="submit" class="btn btn-light">+</button>
    </div>
  </form>
</div>