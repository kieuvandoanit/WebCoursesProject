<h1 style="text-align: center;">Giỏ Hàng</h1>
<tbody>
    {{#if cartInfo}}
    <div class="row row-cols-1 row-cols-md-1 g-3">
        {{#each cartInfo}}
        <div class="col">
            <div class="card h-100 shadow-sm p-3 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">{{packageName}}</h5>
                    <p class="card-text">Số Lượng: <button class="btn btn-light"
                                                    onclick="updateCart({{packageID}}, 0, 'des')">-</button>
                                                <label id="{{packageID}}quantity"
                                                    class="col-sm-2 col-form-label col-form-label-sm"
                                                    style="width:50px; text-align: center;">{{quantity}}</label>
                                                <button class="btn btn-light"
                                                    onclick="updateCart({{packageID}}, 0, 'inc')">+</button></p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tên Sản Phẩm</th>
                                <th scope="col">Số Lượng</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Đơn Vị</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each product}}
                            <tr>
                                <th scope="row">{{@index}}</th>
                                <td>{{Product_name}}</td>
                                <td>
                                    <div class="row">
                                        <div class="col-md">
                                            <div class="input-group">
                                                <button class="btn btn-light"
                                                    onclick="updateCart({{productPackageID}}, {{ProductID}}, 'des')">-</button>
                                                <label id="{{productPackageID}}{{ProductID}}quantity"
                                                    class="col-sm-2 col-form-label col-form-label-sm"
                                                    style="width:50px; text-align: center;">{{quantity}}</label>
                                                <button class="btn btn-light"
                                                    onclick="updateCart({{productPackageID}}, {{ProductID}}, 'inc')">+</button>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>{{currency price}}</td>
                                <td>{{Unit}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <button class="btn btn-outline-dark" onclick="removePackage({{this.packageID}})">Xóa</button>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="row py-3">
            <div class="col-auto">
                {{!-- <button class="btn btn-primary" onclick="placeOrder({{cartInfo.userID}})">Đặt mua</button> --}}
                <a href="/payment/login" class="btn btn-primary">Đặt mua</a>
            </div>
        </div>
    </div>
    {{else}}
    <h3 style="text-align: center;">Chưa Có Gói Nhu Yếu Phẩm</h3>
    {{/if}}
</tbody>