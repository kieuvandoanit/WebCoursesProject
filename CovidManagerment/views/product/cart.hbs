<h1 style="text-align: center;">Giỏ Hàng</h1>
<tbody>
    {{#if cartInfo}}
    <div class="row row-cols-1 row-cols-md-1 g-3">
        {{#each cartInfo}}
        <div class="col">
            <div class="card h-100 shadow-sm p-3 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">{{packageName}}</h5>
                    <p class="card-text">Số lượng: {{quantity}}</p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tên Sản Phẩm</th>
                                <th scope="col">Số Lượng</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Đơn Vị</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each product}}
                            <tr>
                                <th scope="row">{{@index}}{{1}}</th>
                                <td>{{Product_name}}</td>
                                <td>2</td>
                                <td>{{price}} VNĐ</td>
                                <td>{{Unit}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-outline-dark">Xóa</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row py-3">
      <div class="col-auto mr-auto ">
        <button type="submit" class="btn btn-outline-primary">Cập nhật</button>
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary">Đặt mua</button>
      </div>
    </div>
    {{else}}
    <h3 style="text-align: center;">Chưa Có Gói Nhu Yếu Phẩm</h3>
    {{/if}}
</tbody>