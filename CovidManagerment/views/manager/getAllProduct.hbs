
<div class="row">
<div class="col-md-4">
  <form method = "post" action="">
    <div class="input-group">
      <div class="form-outline">
        <input id="search-input" type="text" name="productName" id="form1" class="form-control" />
      </div>
      <button id="search-button" type="submit" class="btn btn-success">Search</button>
    </div>
  </form>
</div>
<div class="col-md">
    <a href="/manager/getProductByPriceASC" class="btn btn-info btn-xs pull-left"><b></b> Sắp xếp giá tăng dần</a>
  
</div>
<div class="col-md">
   <a href="/manager/filterProductByCategory" class="btn btn-info btn-xs pull-left"><b></b> Lọc theo danh mục</a>

</div>
<div class="col-md-4">
  <a href="/manager/addProduct" class="btn btn-primary btn-xs pull-right"><b>+</b> Thêm mới</a>
</div>
</div>
{{#each Product}}
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{this.image_Link}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{this.Product_name}}</h5>
    {{!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> --}}
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Giá sản phẩm: {{this.price}}</li>
    <li class="list-group-item">Đơn vị: {{this.Unit}}</li>
    <li class="list-group-item">Dạnh mục: {{this.Category}}</li>
  </ul>
  <div class="card-body">
    <a href="/manager/editProduct/{{this.ProductID}}" type="button" class="btn btn-outline-info">Chỉnh sửa</a>
    <a href="/manager/deleteProduct/{{this.ProductID}}" type="button" class="btn btn-outline-info">Xóa</a>
  </div>
</div>
{{/each}}

<style>
    .card{
        display: flex;
    }
</style>


